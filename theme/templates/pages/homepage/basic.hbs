{{#>base page="homepage"}}
  {{#>layouts/carousel-listing}}

    {{#*inline "header"}}
      {{>components/header}}
    {{/inline}}

    {{> @partial-block }}

    {{#*inline "main"}}
      {{#each posts as |post|}}
        {{>(getPostSummaryPartial post.type) post=post}}
      {{/each}}
    {{/inline}}

  {{/layouts/carousel-listing}}
{{/base}}
